@model DoAN.Models.Sanpham

@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h1 class="text-center">Hãng: @Model.Nhasx.Name </h1>
<div class="container text-center card" style="width:30rem; height:40rem;">
    <img src="~/img/@Model.ImgUrl" class="car-img-top" />
    <div class="card-body">
        <p class="card - text">Giá: @string.Format("{0:#,##0}", @Model.Gia)</p>
        <div class="content">
            <ul>
                <li style="color:red">@Model.Description</li>
            </ul>
        </div>
        <a href="/SanPham/CapNhatGioHang?SPId=@Model.IdSP" class="btn btn-info">Mua</a>
        <a href="/SanPham/Index" class="btn btn-danger">Thoát</a>
    </div>
</div>
