    <script src="~/Content/font-awesome.css" rel="stylesheet"></script>


</head>
<body style="background-image: url(../img/HinhNen.jpg)">
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand p-2" href="/Admin/Home/Index">
                    Trang chủ
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"> Tuan </span>
                </button>
                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Admin/SanPham/Index">Sản phẩm</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Admin/User/Index">User</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control mx-3 w-100 mx-5" type="search" id="search" name="search" placeholder="Search" aria-label="Search" value="@ViewBag.Search">
                        <button class="btn btn-outline-info mx-5" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg><i class="bi bi-search"></i>
                        </button>
                    </form> &emsp;
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="/Account/Logout" style="color:#FFF; font-weight:bold;" class="mx-2">
                            Logout
                        </a>
                    }
                    else
                    {
                        <a href="/Account/Register" style="color:#FFF; font-weight:bold;" class="mx-2">
                            Register
                        </a>
                        <a href="/Account/Login" style="color:#FFF; font-weight:bold;" class="mx-2">
                            Login
                        </a>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div style="color : red ; font-weight:bold">
                            Hello @User.Identity.Name
                        </div>
                    }
                </div>
            </div>
        </nav>
        <div class="container">
            @RenderBody()

        </div>
    </div>
